<Window x:Class="MementoScreenshot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MementoScreenshot"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button  Command="{Binding ScreenShotCommand}" Height="50" Width=" 150" Margin="0,0,600,300" Name="ss_btn">Take Screenshot</Button>
        <Image Height="350" Width="600" Margin="175,0,0,55" Name="main_img"  ></Image>
        <Button  Command="{Binding PrevCommand}" Height="40" Width="100" Content="Prev" Margin="0,360,325,0"></Button>
        <Button Command="{Binding NextCommand}" Height="40" Width="100" Content="Next" Margin="0,360,100,0"></Button>
    </Grid>
</Window>
